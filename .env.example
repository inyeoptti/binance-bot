# Binance API
BINANCE_API_KEY=abcd1234
BINANCE_API_SECRET=wxyz5678

# CCXT 거래소 키: usdc 테이커 수수료 무료 지원용
# (USDC 서브계정 또는 SPOT/마진/선물 API 키 모두 여기서 관리)
# USE_USDC_FEE_FREE=true

# SQLite DB 파일 경로
DB_FILE=./trading_logs.db

# Discord Webhook (트레이드 알림 및 중요 멘션용)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/XXX/YYY

# 봇 운영 설정
SYMBOL=ETH/USDC
TIMEFRAME=15m
MAX_LEVERAGE=10
USE_MARGIN_RATIO=0.1       # 계좌 자산 중 몇 퍼센트만 마진으로 사용할지 (예: 0.1=10%)
ATR_PERIOD=14              # ATR 계산 기간
BB_PERIOD=20               # 볼린저밴드 계산 기간
BB_STD_MULTIPLIER=2        # 볼린저밴드 표준편차 배수(상단·하단 계산용)
MAX_DAILY_TRADES=20        # 하루 허용 최대 거래 횟수

EMA_PERIOD=423
TP_PCT=0.0587
SL_PCT=0.019
# Dry run mode (true: no real orders, only alerts)
DRY_RUN=true
